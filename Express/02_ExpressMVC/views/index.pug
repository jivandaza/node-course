extends layout

block content
    main.container
        h1.text-center= title
        div.text-right
            a.add-button(href="/add") Agregar Tarea
        ul.task-list
            if tasks.length === 0
                li
                    b.text-center No tienes tareas por hacer 😃👌🏻
            else
                each task in tasks
                    li(class=task.completed ? "completed" : "")
                        a(href=`/edit/${task.id}`) #{task.title}
                        if task.completed
                            a.uncompleted-button(href=`/uncompleted/${task.id}`) Desmarcar
                        else
                            a.completed-button(href=`/completed/${task.id}`) Completar
                        a.remove-button(href=`/remove/${task.id}`) Remover